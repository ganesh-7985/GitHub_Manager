# Rename this file to `.env` and replace the placeholders with your own values.

# GitHub OAuth application settings
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/auth/github/callback

# GitLab OAuth application settings (optional)
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret
GITLAB_CALLBACK_URL=http://localhost:5000/auth/gitlab/callback

# Bitbucket OAuth application settings (optional)
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret
BITBUCKET_CALLBACK_URL=http://localhost:5000/auth/bitbucket/callback

# Session secret for express-session
SESSION_SECRET=super-secret-string

# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017/gitmanager

# The URL of your front-end (React) application
CLIENT_URL=http://localhost:3000